#!/bin/sh

# load global xinit scripts
if [ -d /etc/X11/xinit/xinitrc.d ] ; then
 for f in /etc/X11/xinit/xinitrc.d/?*.sh ; do
  [ -x "$f" ] && . "$f"
 done
 unset f
fi

[[ -f ~/.Xresources ]] && xrdb -merge -I$HOME ~/.Xresources

xset s off
xautolock -time 5 -locker slock -secure &

urxvtd --quiet --fork #--opendisplay

# set a background
~/bin/wallpaper

# systray, vol widget
trayer --edge top --align right --SetDockType true --SetPartialStrut True --expand True \
  --width 5 --height 23 --transparent true --tint 0x000000 &
pnmixer &

# window manager
exec xmonad
