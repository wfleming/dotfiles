[bar/top]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 12

background = #00000000
foreground = #ccffffff
linecolor = #00ffffff

padding-right = 1
module-margin = 1

font-0 = monospace:size=8;0
font-1 = "Font Awesome 5 Free:style=Solid:size=8;2"

modules-left = i3
modules-center = window
modules-right = nordvpn cpu memory volume battery wireless-network clock
tray-position = right
tray-padding = 2

[module/i3]
type = internal/i3
label-focused-foreground = #FFBF00
label-visible-foreground = #808FFA

[module/window]
type = internal/xwindow
label-maxlen=75

[module/nordvpn]
type = custom/script
label = VPN %output%
exec = ~/.config/polybar/nordvpn.sh status
click-left = ~/.config/polybar/nordvpn.sh toggle
interval = 10

[module/cpu]
type = internal/cpu
interval = 1
label = CPU %percentage%%
format = <label>

[module/memory]
type = internal/memory
label = RAM %percentage_used%%
format = <label>

[module/battery]
type = internal/battery
full-at = 98

format-charging = <label-charging>
format-discharging = <label-discharging>
format-full = <label-full>

label-charging = BAT  %percentage%%
label-discharging = BAT   %percentage%%
label-full = BAT   %percentage%%

[module/wireless-network]
type = internal/network
interface = wlan0
interval = 3.0
ping-interval = 10

format-connected = <label-connected>
label-connected =  %essid%
label-disconnected =  not connected
label-disconnected-foreground = #66

[module/volume]
type = internal/pulseaudio

format-volume =  <label-volume>
label-muted =  muted
click-right = pavucontrol &

[module/clock]
type = internal/date
interval = 10
date = %%{F#999}%Y-%m-%d%%{F-}  %%{F#fff}%H:%M%%{F-}

