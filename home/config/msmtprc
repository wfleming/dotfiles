# vim:ft=msmtp

defaults
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

# must be run with stock msmtp (not msmtp-oauth2)
account personal
host smtp.fastmail.com
user willfleming@fastmail.fm
passwordeval pass fastmail.com/imap
port 587
protocol smtp
from will@flemi.ng

# must be run with https://aur.archlinux.org/packages/msmtp-oauth2/
account codeclimate
host smtp.gmail.com
port 587
tls_starttls on
auth plain
user will@codeclimate.com
passwordeval msmtp-gmail-token
from will@codeclimate.com

account default : personal
