[user]
  name = Will Fleming
  email = will@flemi.ng
  signingkey = AE1BBCB2
[alias]
  amend = commit -C HEAD --amend
  assume   = update-index --assume-unchanged
  assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
  br = branch
  c  = commit
  caa = commit -a --amend -C HEAD
  ctags = "!.git/hooks/ctags"
  d = diff
  default-branch = !git remote show origin | grep 'HEAD branch' | cut -d' ' -f5
  fix = commit -a --fixup
  fix-rebase = !git rebase -i --autosquash origin/$(git default-branch)
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
  o = checkout
  p = push
  opr = "!gh pr create"
  pr-rebase = !git fetch && git rebase origin/$(git default-branch) && git push --force
  st = status
  unassume = update-index --no-assume-unchanged
  unmerged-commits = log --not HEAD
  unpushed-commits = !git-log origin/$(git branch 2>/dev/null | grep '^*' | colrm 1 2)..HEAD
[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto
[core]
  editor = nvim
[diff]
  # http://blog.apiaxle.com/post/handy-git-tips-to-stop-you-getting-fired/
  algorithm = patience
  compactionHeuristic = true
  colormoved = default
[apply]
  whitespace = nowarn
[fetch]
  prune = true
[merge]
  ff = only
[pull]
  rebase = true
[push]
  default = current
[github]
  user = wfleming
[commit]
  gpgsign = true
[init]
  templatedir = ~/.config/git_template/
  defaultBranch = main
[url "git@github.com:"]
  insteadOf = gh:
